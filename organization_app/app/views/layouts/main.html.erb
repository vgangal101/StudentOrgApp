<!doctype html>
<html lang="en">

<head profile="http://www.w3.org/2005/10/profile">
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet">
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-bar-rating/1.2.2/themes/fontawesome-stars.min.css">
        <%= stylesheet_link_tag "welcome" %>
        <%= yield :page_style %>

    <!-- Favicon -->
    <link rel="icon" 
      type="image/png" 
      href="https://bdaaosu.org/img/Logo.png">

    
    <title>BDAA Student Portal</title>
</head>

<body>
<div class="container-fluid">
    <div class="row" style="margin-top:5vw">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="width:100%;">
        <a class="navbar-brand" href="#"><img src="https://bdaaosu.org/img/Logo.png" width="70px"/> Portal </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <%= link_to "Home", {controller: "welcome", action: "index"}, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Calendar", {controller: "calendar", action: "index"}, class: "nav-link" %>
                </li>
            </ul>
            <%= link_to('Sign out', destroy_student_session_path, method: :delete) %>
            <%# <button class="btn btn-outline-danger my-2 my-sm-0" type="submit" style='float:right;'>Sign Out</button> %>
        
        </div>
    </nav>
    </div>
    
        <div class="row">
            <div class="wrapper col-md-4" style="padding-left:0px;">
                <!-- Sidebar -->
                <nav id="sidebar">
                    <div class="sidebar-header">
                        <%= image_tag(@current_student.image, width: "200px", id: "profile-image") %>
                        <h3 id="student-name"><%= @current_student.first + ' ' + @current_student.last %></h3>
                    </div>

                    <div style="text-align: center;"> Member Status </p>
                        <div class="progress">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 60%;">2 left!</div>
                        </div>

                        <ul class="list-unstyled components">
                            <%= link_to raw('<button class="btn btn-outline-secondary btn-lg">Settings</button>'), {controller: "settings", action: "index"} %>
                            
                        </ul>
                </nav>

            </div>
            <main role="main" class="col-md-8" style="margin-left:-20vw;">
            <%= yield %>
            </main>
            </div>
        </div>

        <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
    <script type="text/javascript">
        var selector = '.btn';

        $(selector).on('click', function () {
            console.log("click!");
            $(selector).removeClass('active');
            $(this).addClass('active');
        });
    </script>

    <%= yield :scripts %>
	</body>
</html>